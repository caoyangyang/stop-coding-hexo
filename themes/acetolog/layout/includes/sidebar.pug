div.al_sidebar
  div.al_sidebar_overlay.al_full_cover
  div.al_pos_fixed.al_sidebar_cnt
    div.dis_flex_acenter.al_sidebar_header
      h3= config.title
      div.al_sidebar_close.al_header_setting
        svg.al_header_icon
            use(xmlns="http://www.w3.org/2000/svg" xlink:href="/assets/svg_icons.svg#svg-close")
    div.al_sidebar_author_cnt
      div.al_sidebar_author_info
        h4= config.author
        img.al_sidebar_avatar(src=config.avatar || theme.avatar || '')
        p= config.description
      
      if theme.contact.enable
        div.al_sidebar_contact_info
          h4= 'GET IN TOUCH'
          p= theme.contact.description
          div.dis_flex.al_sidebar_social_widget

            if theme.contact.facebook.enable
              div.al_social_icon_cnt(data_link=`https://www.facebook.com/${theme.contact.facebook.username}`)
                svg.al_social_icon#facebook
                      use(xmlns="http://www.w3.org/2000/svg" xlink:href="/assets/svg_icons.svg#icon_facebook")

            if theme.contact.instagram.enable
              div.al_social_icon_cnt(data_link=`https://www.instagram.com/${theme.contact.instagram.username}/`)
                svg.al_social_icon#instagram
                      use(xmlns="http://www.w3.org/2000/svg" xlink:href="/assets/svg_icons.svg#icon_instagram")

            if theme.contact.weibo.enable
              div.al_social_icon_cnt(data_link=`https://weibo.com/${theme.contact.weibo.username}/`)
                svg.al_social_icon#weibo
                      use(xmlns="http://www.w3.org/2000/svg" xlink:href="/assets/svg_icons.svg#icon_weibo")
            
            if theme.contact.github.enable
              div.al_social_icon_cnt(data_link=`https://www.github.com/${theme.contact.github.username}/`)
                svg.al_social_icon#github
                      use(xmlns="http://www.w3.org/2000/svg" xlink:href="/assets/svg_icons.svg#icon_github")
            
            if theme.contact.twitter.enable
              div.al_social_icon_cnt(data_link=`https://www.twitter.com/${theme.contact.twitter.username}/`)
                svg.al_social_icon#twitter
                      use(xmlns="http://www.w3.org/2000/svg" xlink:href="/assets/svg_icons.svg#icon_twitter")